{% extends 'base.html.twig' %}

{% block title %} Product list  {% endblock %}

{% block body %}

<h1>Products</h1>

<div class="table">
    <a href="{{ path('product_new')}}"> Create new</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Size</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.size }}</td>
                <td>
                    <ul>
                        <li><a href="{{ path('product_show', {'id': product.id}) }}">View</a></li>
                        <li><a href="{{ path('product_edit', {'id': product.id}) }}">Edit</a></li>
                        <li><a href="{{ path('product_delete', {'id': product.id}) }}">Delete</a></li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <ul>
        <li><a href="{{ path('home') }}">Home</a></li>
    </ul>

</div>
{% endblock %}
